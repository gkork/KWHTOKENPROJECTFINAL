# === Backend env (indexer + API) ===

# RPC του τοπικού node (Anvil/Hardhat)
RPC_URL=http://127.0.0.1:8545
# WS_URL=ws://127.0.0.1:8545  # προαιρετικό

# MongoDB
MONGO_URL=mongodb://127.0.0.1:27017/kwhtoken

# Συμβόλαια (ίδιες διευθύνσεις με το frontend)
KWHTOKEN_ADDR=
MARKET_ADDR=
BILLING_ADDR=
SIMULATOR_ADDR=

# Από ποιο block να ξεκινήσει το backfill
START_BLOCK=0

# Πόρτα API
PORT=4000

# (προαιρετικό) JWT για login — άφησέ τα κενά αν δεν χρησιμοποιείς login
JWT_SECRET=change-me-in-production
JWT_EXPIRES=7d
